<div class="row">
  <div class="small-6 large-centered columns">
    <h2>Sign In</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, :required => false, :autofocus => true, input_html: {style: 'width: 480px'} %>
        <%= f.input :password, :required => false, input_html: {style: 'width: 480px'} %>
        <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign In" %>
      </div>
      <ul class="inline-list">
        <li><%= link_to 'Forgot your password?', new_user_password_path %></li>
        <li><%= link_to 'New user registration', new_user_registration_path %></li>
      </ul>
    <% end %>

  </div>
</div>
